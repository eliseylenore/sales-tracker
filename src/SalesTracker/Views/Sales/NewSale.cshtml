@model SalesTracker.Models.Car

<h2>Create Sales</h2>
<form action="NewSale" data-request-url="@Url.Action("NewSale", "Sales")" class="new-sale">
    <div class="form-group">
        <input type="hidden" for="car-id" id="id" value=@Model.CarId/>
        <label for="sale-car">@Model.Make @Model.Model</label>
        <label for="sellingPrice">Price: </label>
        <input type="text" name="sellingPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="comment">Comments: </label>
        <input type="text" name="comment" class="form-control" />
    </div>
   
    <button type="submit" class="btn btn-info">Submit</button>
</form>