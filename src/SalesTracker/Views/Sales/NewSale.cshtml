@model SalesTracker.Models.Car

<h2>Create Sales</h2>
<form class="new-sale" action="NewSale" data-request-url="@Url.Action("NewSale", "Sales")">
    <div class="form-group">
        <label for="carId">@Model.Make @Model.Model</label>
        <label for="sellingPrice">Price: </label>
        <input type="text" for="sellingPrice" name="sellingPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="comment">Comments: </label>
        <input type="text" for="comment" name="comment" class="form-control" />
    </div>
    <input type="hidden" for="carId" name="carId" value=@Model.CarId />
   
    <button type="submit" class="btn btn-info">Submit</button>
</form>