@model IEnumerable<SalesTracker.Models.Car>

@foreach(var car in Model)
    {
        <div>
            @Html.DisplayFor(modelCar => car.Make)
            @Html.DisplayFor(modelCar => car.Model)
            @Html.DisplayFor(modelCar => car.Year)
            <button class="btn btn-success buy-car" data-request-url='@Url.Action("NewSale", "Sales", new { id = car.CarId })'>Buy</button>
            <div id="display-@car.CarId"></div>
        </div>
    }